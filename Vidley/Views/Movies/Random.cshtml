@model IEnumerable<Vidley.Models.Movie>
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ 
    //var className = Model.Name.Count > 0 ? "popular" : null;
}


@if (Model.Count() == 0)
{
    <text>Currently We dont have movies to show</text>
}
else
{
    <ul>
        @foreach (var movies in Model)
        {
            <li>@Html.ActionLink(movies.Name, "Detail", "Movies", new { Id = movies.Id } , null)</li>
        }

    </ul>
}


